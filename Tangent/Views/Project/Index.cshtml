@model Tangent.Models.Project

<form class="form-horizontal" action="@Url.Action("Update", "Project")" method="post">
    @Html.HiddenFor(m=> m.pk)
    <div class="form-group">
        <div class="col-sm-12">
            @Html.TextBoxFor(m => m.title, new { @class = "form-control", placeholder = "Title" })
            @Html.ValidationSummary(true)
            @Html.ValidationMessageFor(m => m.title)
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-12">
            @Html.TextBoxFor(m => m.description, new { @class = "form-control", placeholder = "Description" })
            @Html.ValidationSummary(true)
            @Html.ValidationMessageFor(m => m.description)
          
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-12">
           @Html.TextBoxFor(m => m.start_date, new { type = "date" , format = "yyyy-MM-dd" })
            
          
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-12">
           @Html.TextBoxFor(m => m.end_date, new { type = "date" , format = "yyyy-MM-dd" })
            
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-12">
       Is Billable: @Html.CheckBoxFor(m => m.is_billable) 
          
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-12">
         Is Active: @Html.CheckBoxFor(m => m.is_active)
            
        </div>
    </div>   

    <button type="submit" class="btn btn-default">Update</button>
</form>